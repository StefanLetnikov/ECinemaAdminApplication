@model ECinemaAdminApplication.Models.Order

<div class="container">
    <div class="m-3"> 
        <a class="btn btn-success">Order for: @Model.User.UserName</a>
    </div>

    @for(int i=0;i< Model.TicketInOrders.Count; i++)
    {
        var item = Model.TicketInOrders.ElementAt(i).OrderedTicket;
        if (i % 3 == 0)
        {
            @:<div class="row">
        }

        <div class="col-md-3 m-4">
            <div class="card" style="width: 18rem; height:30rem;">
                <img class="card-img-top" src="@item.MovieImage" alt="Image for ticket" style="height:50%"/>

                <div class="card-body">
                    <h3 class="card-title">@item.MovieName</h3>
                    <p class="card-text">@item.MovieDescription</p>
                    <p class="card-text">Rating: @item.MovieRating</p>
                    <h6>Price: @item.TicketPrice</h6>
              </div>


            </div>
        </div>



        if (i % 3 == 2)
        {
            @:</div>
        }
    }

</div>
